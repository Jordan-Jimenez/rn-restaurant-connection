{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"pretty": true,
		"noImplicitAny": true,
		"target": "es6",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": ".",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src"],
	"exclude": ["node_modules"]
}
